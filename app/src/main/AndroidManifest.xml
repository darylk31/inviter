<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="invite.hfad.com.inviter">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:supportsRtl">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/LoginActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Contacts.SearchContactsActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
        <activity android:name=".Register.ForgotPasswordActivity"/>
        <activity
            android:name=".SettingActivity"
            android:label="Preferences"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBjyx5LbOyMoAjY6_sfVJ-Sy6nJM6g--9s"/>

        <activity
            android:name=".MakeEventActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".EventObjectModel.EventPage"/>
        <activity
            android:name=".Contacts.ContactsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Inbox.InboxActivity"
            android:parentActivityName=".UserAreaActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="OPEN_INBOX"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UserAreaActivity"/>
        </activity>
        <activity
            android:name=".UserAreaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/UserAreaTheme"/>
        <activity android:name=".Register.RegisterName"/>
        <activity android:name=".Register.RegisterEmail"/>
        <activity android:name=".Register.RegisterUsername"/>
        <activity android:name=".Register.RegisterPassword"/>
        <activity android:name=".Register.RegisterConfirm"/>
        <activity
            android:name=".EventObjectModel.EventSelectContacts"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EventObjectModel.EventViewPager"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EventObjectModel.CreateEvent"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".EventObjectModel.EditEvent"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".EventObjectModel.EventEditAdminActivity"/>
        <activity android:name=".EventObjectModel.EventMembersActivity"/>
        <activity android:name=".Register.RegisterPhoneNumber"/>
        <activity android:name=".EventObjectModel.EditEventSelectContacts" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"/>

        <service
            android:name=".MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".MyFirebaseInstanceIDService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>


    </application>


</manifest>