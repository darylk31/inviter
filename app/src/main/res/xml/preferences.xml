<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    //Invite Friends
    //Account Settings
    <PreferenceCategory
        android:title="My Account">
        <Preference
            android:key="pref_key_username"
            android:title = "Username"
            android:summary = "Username_database"/>
        <Preference
            android:key="pref_key_email"
            android:title = "Email"
            android:summary = "Email_database"
            />
        <EditTextPreference
            android:key="pref_key_first_name"
            android:title = "First Name"
            android:summary = "name_database"
            android:dialogTitle = "Enter your first name"
            />
        <EditTextPreference
            android:key="pref_key_last_name"
            android:title = "Last Name"
            android:summary = "name_database"
            android:dialogTitle = "Enter your last name"
            />
        <EditTextPreference
            android:key="pref_key_display_name"
            android:title = "Display Name"
            android:summary = "display_database"
            />
        <PreferenceScreen
            android:key="pref_key_phonenumber_screen"
            android:title = "Phone Number">
            <PreferenceCategory
                android:key="phoneNumber_catgeory"
                android:title="Phone Number">
                <SwitchPreference
                    android:key="pref_key_phonenumber_toggle"
                    android:title="Use phone number"
                    android:summary="Use your phone number to allow users to find you"
                />
            </PreferenceCategory>
        </PreferenceScreen>
        <EditTextPreference
            android:key="pref_key_password"
            android:title = "Password"
            android:dialogTitle = "Enter password"
            />
    </PreferenceCategory>

    //Settings
    <PreferenceCategory
        android:title="Settings">
        <PreferenceScreen
            android:key="pref_key_Notification_screen"
            android:title = "Notification">
            <PreferenceCategory
                android:key="notification_catgeory"
                android:title="Notification">
                <SwitchPreference
                    android:key="pref_key_notification_toggle"
                    android:title="Allow Notification"
                    android:summary="Allow the app to notify you"
                    />
            </PreferenceCategory>
        </PreferenceScreen>
        <Preference
            android:key="pref_key_past_events"
            android:title = "Show Past Events..."
            android:summary = ""
            />
        <Preference
            android:key="pref_update_frequency"
            android:title = "Contact Update Frequency"
            android:summary = ""/>

    </PreferenceCategory>

    //Support

    //About settings
    <PreferenceCategory
        android:title="About">
        <Preference
            android:key="pref_key_support"
            android:title = "Support"
            android:summary = ""
            />
        <Preference
            android:key="pref_key_privacy"
            android:title = "Privacy"
            android:summary = ""
            />
        <Preference
            android:key="pref_key_termsofservice"
            android:title = "Terms of Service"
            android:summary = ""
            />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="">
        <Preference
            android:key="pref_key_Logout"
            android:title = "Log Out"
            android:summary = ""
            />

    </PreferenceCategory>



</PreferenceScreen>