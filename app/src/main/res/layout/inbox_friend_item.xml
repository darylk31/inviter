<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inbox_friend_cardview"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/friend_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Charles would like to add you!"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <Button
                android:id="@+id/friend_accept_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/friend_decline_button"
                android:layout_toStartOf="@+id/friend_decline_button"
                android:backgroundTint="@android:color/holo_green_light"
                android:elevation="0dp"
                android:text="Accept"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/friend_decline_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@android:color/darker_gray"
                android:text="Decline"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>