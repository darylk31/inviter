<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="invite.hfad.com.inviter.MakeEventActivity"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout1"
                android:orientation="vertical"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etTitle"
                    android:hint="Event Name"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:ems="10"
                    android:id="@+id/etTime"
                    android:hint="Time"
                    android:focusable="false"
                    style="@style/TimeDateEditTheme"
                    android:background="@drawable/event_edit_text_bg"
                    android:gravity="center"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/etDate"
                    android:hint="Date"
                    android:focusable="false"
                    style="@style/TimeDateEditTheme"
                    android:gravity="center"
                    android:background="@drawable/event_edit_text_bg"
                    android:layout_weight="3"
                    android:layout_marginLeft="15dp"
                    />
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:id="@+id/etDescription"
                    android:hint="Description"
                    android:gravity="bottom"
                    android:layout_weight="1"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ibAdditionalSetting"
                    android:src="@drawable/ic_control_point_black_24p"
                    android:layout_below="@+id/etDescription"
                    android:onClick="onResizeScreen"
                    android:background="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout2"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="location"
                    android:id="@+id/etLocation"/>

                <CheckBox android:id="@+id/cbAllDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="All-day"
                    android:onClick="onAllDayClick"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text = "ofjmasld;kfjasdl;fkjasd;fljkasd;lfjasdkl;fjsadl;kfjasdl;fjsadl;kfjasl;kfjds"
                    android:visibility="gone"
                    android:id="@+id/tvTest" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_send_black_24dp"
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onInvite"
        android:id="@+id/bInvite"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>