<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchcontact_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvSearchDisplayName"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvSearchUserName"
                android:layout_below="@+id/tvSearchDisplayName"
                android:layout_alignLeft="@+id/tvSearchDisplayName"
                android:layout_alignStart="@+id/tvSearchDisplayName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvSearchReason"
                android:layout_below="@+id/tvSearchUserName"
                android:layout_alignLeft="@+id/tvSearchUserName"
                android:layout_alignStart="@+id/tvSearchUserName" />

            <Button
                android:id="@+id/bAddSearchContact"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/buttonTextColor"
                android:text="ADD"
                android:textAppearance="@android:style/TextAppearance.Holo" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>